# Database Configuration - PostgreSQL (recommended for production)
DATABASE_URL=postgresql+asyncpg://sas:sas_password@localhost:5434/sas

# For SQLite (development/testing)
# DATABASE_URL=sqlite+aiosqlite:///./sas.db

# OpenClaw Sessions Directory
OPENCLAW_SESSIONS_DIR=~/.openclaw/agents/main/sessions

# API Configuration
API_HOST=0.0.0.0
API_PORT=6874
API_RELOAD=true

# Logging
LOG_LEVEL=INFO

# File Watcher
ENABLE_FILE_WATCHER=true
WATCH_INTERVAL_SECONDS=1

# Sync Service
FULL_SCAN_INTERVAL_HOURS=1
BATCH_SIZE=100

# CORS (if needed)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
